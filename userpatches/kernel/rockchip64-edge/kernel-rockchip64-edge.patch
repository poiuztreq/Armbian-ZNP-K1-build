+++ b/arch/arm64/boot/dts/rockchip/rk3328-roc-cc.dts
@@ -353,6 +353,18 @@
 	status = "okay";
 };

+&uart0 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart0_xfer>;
+	status = "okay";
+};
+
 &uart2 {
 	status = "okay";
 };

+&pinctrl {
+	uart0_xfer: uart0-xfer {
+		rockchip,pins = <0 RK_PA0 RK_FUNC_UART0_TX>, <0 RK_PA1 RK_FUNC_UART0_RX>;
+	};
+};
+
 &usb20_otg {
 	dr_mode = "host";
 	status = "okay";
